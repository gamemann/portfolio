---
import Flair from "../helper/Flair.astro"

const { banner, title, link, openSource, sourceLink, category } = Astro.props

let bannerToUse = banner

if (!bannerToUse)
    bannerToUse = "/images/projects/default.png"
---

<div class="group p-4 ring-1 ring-secondary-2 bg-secondary-1 rounded shadow-md shadow-black sm:intersect:motion-preset-compress intersect-once">
    <div class="flex flex-col gap-2 h-full">
        <div class="w-full h-32 xs:h-48 sm:h-60 lg:h-72">
            <a href={link} target="_blank">
                <img
                    src={bannerToUse}
                    alt={title}
                    class="w-full h-full object-cover rounded sm:brightness-75 sm:group-hover:brightness-100 sm:transition-all sm:duration-300"
                />
            </a>
        </div>
        <h3 class="text-white text-xl text-center font-extrabold">{title}</h3>
        <p class="text-sm">
            <slot />
        </p>
        <div class="grow"></div>
        <div class="flex flex-wrap gap-y-2 xs:gap-y-0 justify-between mt-8">
            <Flair className="bg-btn-secondary">{category}</Flair>
            {openSource && (
                <>
                    {sourceLink ? (
                        <a href={sourceLink} target="_blank">
                            <Flair className="bg-green-700 hover:bg-green-600">Open Source</Flair>
                        </a>
                    ) : (
                        <Flair className="bg-green-700">Open Source</Flair>
                    )}
                </>
            )}
        </div>
        
        <div class="flex justify-center mt-4">
            <a
                href={link}
                target="_blank"
            >
                <Flair className="bg-btn-primary hover:bg-btn-primary-hover duration-100">View</Flair>
            </a>
        </div>
    </div>
</div>