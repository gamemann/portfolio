---
const { icon, title } = Astro.props
---

<div class="py-4 px-10 bg-blue-900 ring-1 ring-gray-500 rounded">
    <div class="flex flex-col">
        <div class="w-full h-1/2 flex justify-center">
            <img
                src={icon}
                class="w-32 h-32"
            />
        </div>
        <h3 class="text-xl text-white font-bold text-center">
            {title}
        </h3>
        <span>
            <slot />
        </span>
    </div>
</div>