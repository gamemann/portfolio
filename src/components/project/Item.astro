---
const { banner, title, link, openSource, category } = Astro.props

let bannerToUse = banner

if (!bannerToUse)
    bannerToUse = "/images/projects/default.png"
---

<div class="p-4 ring-1 ring-gray-800 bg-sky-950 rounded">
    <div class="flex flex-col gap-1 h-full">
        <div class="w-full h-72">
            <img src={bannerToUse} class="w-full h-full object-cover rounded" />
        </div>
        <h3 class="text-white text-xl text-center font-bold">{title}</h3>
        <span>
            <slot />
        </span>
        <div class="grow"></div>
        <div class="flex justify-between">
            <div class="py-2 px-4 bg-gray-600 rounded">
                <span>{category}</span>
            </div>
            {openSource && (
                <div class="py-2 px-4 bg-green-800">
                    <span class="font-bold text-white">Open Source</span>
                </div>
            )}
        </div>
        
        <div class="flex justify-center">
            <a
                href={link}
                target="_blank"
                class="py-2 px-4 rounded text-white font-bold bg-cyan-800"
            >View</a>
        </div>
    </div>
</div>