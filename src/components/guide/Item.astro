---
const { banner, title, link, category, source } = Astro.props

let bannerToUse = banner

if (!bannerToUse)
    bannerToUse = "/images/guide/default.png"
---

<div class="p-4 rounded ring-1 ring-slate-800 bg-gray-800">
    <div class="flex flex-col gap-1 h-full">
        <div class="w-full h-72">
            <img src={bannerToUse} class="w-full h-full object-cover rounded" />
        </div>
        <h3 class="text-white font-bold text-xl text-center">{title}</h3>
        <span class="text-sm">
            <slot />
        </span>
        <div class="grow"></div>
        <div class="flex justify-between">
            <div class="p-2 text-white rounded bg-gray-700">
                <span>{category}</span>
            </div>
            <div class="">

            </div>
        </div>
        <div class="flex justify-center">
            <a
                href={link}
                target="_blank"
                class="px-4 py-2 bg-cyan-800 rounded"
            >View</a>
        </div>
    </div>
</div>
