---
const { icon, title } = Astro.props
---

<div class="py-4 px-6 bg-secondary-1 ring-1 ring-secondary-2 shadow-md shadow-black rounded sm:intersect:motion-preset-slide-up-lg intersect-once">
    <div class="flex flex-col md:flex-row gap-2">
        <div class="md:w-1/3 flex justify-center">
            <img
                src={icon}
                class="w-32 h-32"
            />
        </div>
        <div class="md:w-2/3">
            <h3 class="text-xl text-white font-bold text-center md:text-left">
                {title}
            </h3>
            <p class="text-sm">
                <slot />
            </p>
        </div>
    </div>
</div>