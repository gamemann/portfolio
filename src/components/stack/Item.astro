---
const { icon, title, expLevel } = Astro.props
---

<div class="p-4 rounded bg-gray-800 ring-1 ring-gray-700">
    <div class="flex flex-col gap-1">
        <div class="flex justify-center">
            <img
                src={icon}
                class="w-10 h-10"
            />
        </div>
        <h3 class="text-xl text-white font-bold text-center">
            {title}
        </h3>
        <div class="flex justify-center">
            <span>{expLevel}</span>
        </div>
    </div>
</div>