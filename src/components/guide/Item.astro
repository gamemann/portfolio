---
import Flair from "../helper/Flair.astro"

const { banner, title, link, category, source } = Astro.props

let bannerToUse = banner

if (!bannerToUse)
    bannerToUse = "/images/guide/default.png"
---

<div class="p-4 rounded ring-1 ring-sky-800 bg-blue-900">
    <div class="flex flex-col gap-1 h-full">
        <div class="w-full h-72">
            <img src={bannerToUse} class="w-full h-full object-cover rounded" />
        </div>
        <h3 class="text-white font-bold text-xl text-center">{title}</h3>
        <span class="text-sm">
            <slot />
        </span>
        <div class="grow"></div>
        <div class="flex justify-between">
            <Flair className="bg-sky-600">{category}</Flair>
            <div class="">

            </div>
        </div>
        <div class="flex justify-center">
            <a
                href={link}
                target="_blank"
            >
                <Flair className="bg-cyan-600 hover:bg-cyan-500 duration-100">View</Flair>
            </a>
        </div>
    </div>
</div>
